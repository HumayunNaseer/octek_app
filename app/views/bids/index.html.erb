<p id="notice"><%= notice %></p>

<h1>Bids</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Bidamount</th>
      <th>Bid Placed By</th>
      <th>Product Name</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <% if (bid.product.user == current_user) && (bid.product.productstatus == true)%>
        <td><%= bid.bidamount %></td>
        <td><%=link_to bid.user.username, user_path(bid.user) %></td>
        <td><%= link_to bid.product.productname , product_path(bid.product) %></td>
        <td class=" btn btn-xs btn-warning"><%= link_to "Approve Bid", approve_bid_path(bid),
                    data: { confirm: "Are you sure you want to confirm"}%></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% elsif (bid.user == current_user) && (bid.product.productstatus == true)%>
        <td><%= bid.bidamount %></td>
        <td><%=link_to bid.user.username, user_path(bid.user) %></td>
        <td><%= link_to bid.product.productname , product_path(bid.product) %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>


      </tr>
    <% end %>
  </tbody>
</table>

