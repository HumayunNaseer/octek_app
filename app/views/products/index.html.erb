<p id="notice"><%= notice %></p>

<h1 class="center productlisth1">List of Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Productname</th>
      <th>Productprice</th>
      <th>Productstatus</th>
      <th>Created By</th>
      <th>category</th>

      <th colspan="3"></th>


    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.productname , product_path(product) %></td>
        <td><%= link_to product.productprice , product_path(product) %></td>
        <% if (product.productstatus == true) %>
            <td>Available</td>
            <% else %>
              <td>Not Available</td>
          <%end %>

        <td><%= product.user.username if product.user %></td>

        <td><%= product.category&.name || 'No category' %></td>

      
        <td><%= link_to 'Show', product ,  class: "btn btn-xs btn-primary" %></td>
        <% if logged_in? && (current_user == product.user) %>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-xs btn-warning" %></td>
        <td><%= link_to 'Destroy', product, class: "btn btn-xs btn-danger" ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>



  </tbody>
</table>

<br>
